		año=fecha.get(Calendar.YEAR);
		System.out.println(dia+" "+mes+" "+año);
		Fecha hoy=new Fecha(dia,mes,año);
		
		System.out.println(hoy.esBisiesto()+" .... bisiesto");
		System.out.println(hoy.esCorrecta()+" .... fecha ");
