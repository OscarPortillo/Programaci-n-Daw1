
public class Autor {
	private String nombre;
	private String correo;
	private char genero;
	public Autor(String nombre, String correo, char genero) {
		this.nombre = nombre;
		this.correo = correo;
		this.genero = genero;
	}
	public Autor(String nombre, String correo, String genero) {
		this.nombre = nombre;
		this.correo = correo;
		this.genero = genero.charAt(0);
	}
	public String cadenaAutor(){
		return "Autor [nombre = "+nombre+" email= "+correo+" genero "+genero+" genero]";
	}
	
}//class