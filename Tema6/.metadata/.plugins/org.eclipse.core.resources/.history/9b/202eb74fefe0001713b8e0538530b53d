import java.util.*;
public class Principal {

	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner teclado=new Scanner(System.in);
		Hora reloj;
		reloj = new Hora ();
		reloj.verHoraModificada();
		int hora = 0,horaAux;
		int minutos;
		minutos=teclado.nextInt();
		if(minutos>60){
			horaAux=60;
			if(horaAux==60){
				hora=1;
			}
			minutos=horaAux-hora;
		}
		System.out.println(horaAux+":"+minutos);
		reloj.verHora();
		
	}//main

}//class
