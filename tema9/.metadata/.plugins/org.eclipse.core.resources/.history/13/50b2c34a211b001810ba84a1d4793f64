
public class Menu {
	private Restaurante plato;
	private double precio;
	private String postre;
	
	public Menu(Restaurante plato, double precio, String postre) {
		this.plato = plato;
		this.precio = precio;
		this.postre = postre;
	}

	public Restaurante getPlato() {
		return plato;
	}

	public void setPlato(Restaurante plato) {
		this.plato = plato;
	}

	public double getPrecio() {
		return precio;
	}

	public void setPrecio(double precio) {
		this.precio = precio;
	}

	public String getPostre() {
		return postre;
	}

	public void setPostre(String postre) {
		this.postre = postre;
	}

	public void verMenu(){
		plato.verCarta();
		System.out.println("PRECIO: "+precio);
		System.out.println("POSTRE: "+postre);
	}
}
