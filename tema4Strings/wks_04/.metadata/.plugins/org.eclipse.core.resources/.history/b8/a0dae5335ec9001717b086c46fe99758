import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {

		@SuppressWarnings("resource")
		Scanner teclado = new Scanner (System.in);
		int numero;
		String caracter;
		boolean correcto=false;
		char letra=' ';
		String letras="TRWAGMYFPDXBNJZSQVHLCKE";
		
		while(!correcto){
			System.out.println("Introduce un numero máximo 7 caracteres: ");
			numero=teclado.nextInt();
			
			if(numero<1 && numero>9999999){
				correcto=false;
			}else{
				 teclado = new Scanner (System.in);
				System.out.println("Introduce una letra");
				caracter=teclado.nextLine().toUpperCase();//.charAt(0);
				letra=caracter.charAt(0);
				
				if(letra==letras.charAt(numero % 23)){
					correcto=true;
				}else{
					correcto=false;
				}
			}
			if(!correcto){
				System.out.println("Error: "+numero+letra+" DNI invalido");
			}else{
				System.out.println("DNI Correcto"+numero+letra);
			}
		}//while
		
	}//main

}//class
