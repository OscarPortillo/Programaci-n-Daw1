import java.util.*;
public class Principal {

	public static void main(String[] args) {
		Scanner t=new Scanner(System.in);
		final int MAX_LONG=80;
		String frase;
		//String minus,mayus;
		int vocalMayus ,vocalMinus ,consonante,consonanteMayus,numericos;
		do{
			System.out.println("Introduce una frase");
			frase=t.nextLine();

		}while(frase.length()>MAX_LONG);
		//minus=frase.toLowerCase();
		//mayus=frase.toUpperCase();
		vocalMayus=0;
		vocalMinus =0;
		consonante=0;
		consonanteMayus=0;
		numericos=0;
		
		for(int k=0;k<frase.length();k++){

			if( frase.charAt(k)=='a' ||  frase.charAt(k)=='e'
					||  frase.charAt(k)=='i' ||  frase.charAt(k)=='o'
					||  frase.charAt(k)=='u'){
				vocalMinus++;
			}
			if( frase.charAt(k)=='A' ||  frase.charAt(k)=='E'
					||  frase.charAt(k)=='I' ||  frase.charAt(k)=='O'
					||  frase.charAt(k)=='U'){
				vocalMayus++;
			}
			if( frase.charAt(k)>='b' ||  frase.charAt(k)=='c'
					||  frase.charAt(k)=='d' ||  frase.charAt(k)=='f'
					||  frase.charAt(k)=='g' ||frase.charAt(k)=='h' || 
					frase.charAt(k)=='j'||  frase.charAt(k)=='k' ||
					frase.charAt(k)=='l'||  frase.charAt(k)=='m'|| 
					frase.charAt(k)=='ñ' ||  frase.charAt(k)=='p'
					||  frase.charAt(k)=='q' ||  frase.charAt(k)=='r'
					||  frase.charAt(k)=='s' ||frase.charAt(k)=='t' || 
					frase.charAt(k)=='v' ||  frase.charAt(k)=='w' || 
					frase.charAt(k)=='x' ||  frase.charAt(k)=='y' ||frase.charAt(k)=='z'){

				consonante++;
			}
			if( frase.charAt(k)=='B' ||  frase.charAt(k)=='C'
					||  frase.charAt(k)=='D' ||  frase.charAt(k)=='F'
					||  frase.charAt(k)=='G' ||frase.charAt(k)=='H' || 
					frase.charAt(k)=='J'||  frase.charAt(k)=='K' ||
					frase.charAt(k)=='L'||  frase.charAt(k)=='M'|| 
					frase.charAt(k)=='Ñ' ||  frase.charAt(k)=='P'
					||  frase.charAt(k)=='Q' ||  frase.charAt(k)=='R'
					||  frase.charAt(k)=='S' ||frase.charAt(k)=='T' || 
					frase.charAt(k)=='V' ||  frase.charAt(k)=='W' || 
					frase.charAt(k)=='X' ||  frase.charAt(k)=='Y' ||frase.charAt(k)=='Z'){
				
				consonanteMayus++;
			}
		}
		System.out.println("La frase tiene "+vocalMayus+" vocales MAYUSCÚLAS.");
		System.out.println("La frase tiene "+vocalMinus+" vocales minuscúlas.");
		System.out.println("La frase tiene "+consonante+" consonantes minuscúlas.");
		System.out.println("La frase tiene "+consonanteMayus+" consonantes MAYUSCÚLAS.");
		System.out.println("La frase tiene "+numericos+" numeros.");


	}//mian

}//class
