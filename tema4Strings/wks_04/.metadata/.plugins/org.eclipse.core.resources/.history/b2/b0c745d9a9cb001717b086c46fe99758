import java.util.*;
public class Principal {

	public static void main(String[] args) {
		Scanner teclado=new Scanner(System.in);
		//Leer una frase por teclado y escribir a 
		//continuación cuantas mayúsculas, minúsculas y
		//números contiene.
		String frase;
		System.out.println("Introduzca una frase: ");
		frase=teclado.nextLine();
		int mayusculas,minusculas;
		mayusculas=0;
		minusculas=0;
		for(int k=0;k<frase.length();k++){
			if(frase.charAt(k)>=65 && frase.charAt(k)<=90){//compruebo si se ecuentran en rango de mayuculas codigo ascii
				mayusculas++;
			}else if(frase.charAt(k)>=97 && frase.charAt(k)<=122){//compruebo si se ecuentran en rango de minusculas codigo ascii
				minusculas++;
			}
		}
		System.out.println("La frase tiene  "+mayusculas+" letras mayusculas");
		System.out.println("La frase tiene  "+minusculas+" letras minusculas");
		
	}//mian

}//class